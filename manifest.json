{
    "name": "DmmGameLancher",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "使用大小适宜的独立窗口启动DmmGame , 并有静音、截图、缩放等功能",
    "author": "MoeKagari",
    "background": {
        "scripts": [
            "tool_1.js",
            "tool_2.js",
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["downloads", "downloads.shelf", "tabs", "notifications", "<all_urls>", "webNavigation", "storage"],
    "options_ui": {
        "chrome_style": true,
        "page": "options.html"
    }
}
